<Window x:Class="PokemonTournamentWPF.GestionStades"
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonTournamentWPF"
        mc:Ignorable="d"
        Title="GestionStades" Height="300" Width="300">
    <Grid Background="Black">
        <Label x:Name="label" Content="Gestion des stades" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Calibri" FontSize="22" Width="292"/>
        <Button x:Name="AddStade" Content="Ajouter un stade" HorizontalAlignment="Left" Margin="82,80,0,0" VerticalAlignment="Top" Width="123" Height="34" FontFamily="Calibri" FontSize="13" Click="AddStade_Click"/>
        <Button x:Name="ModifStade" Content="Modifier un stade" HorizontalAlignment="Left" Margin="82,138,0,0" VerticalAlignment="Top" Width="123" Height="34" FontFamily="Calibri" FontSize="13" Click="ModifStade_Click" />
        <Button x:Name="DeleteStade" Content="Supprimer un stade" HorizontalAlignment="Left" Margin="82,197,0,0" VerticalAlignment="Top" Width="123" Height="34" FontFamily="Calibri" FontSize="13" Click="DeleteStade_Click" />

    </Grid>
</Window>
